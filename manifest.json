{
    "manifest_version": 3,
    "name": "Darkify Web",
    "version": "1.0",
    "description": "Toggle dark mode on web pages",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup/popup.html",
        "default_icon": {
            "16": "./icons/icon16.png",
            "48": "./icons/icon48.png",
            "128": "./icons/icon128.png"
        }
    },
    "icons": {
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    }
}